{
    "require": {
        "psr/http-message": "^1.0",
        "zendframework/zend-diactoros": "^2.1",
        "php-di/php-di": "^6.0",
        "twig/twig": "^2.0",
        "aura/router": "^3.1",
        "symfony/dotenv": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "symfony/dom-crawler": "^4.2",
        "symfony/css-selector": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
	"scripts": {
        "serve": "php -S 0.0.0.0:8080 -t public",
        "test": "phpunit --colors=always"
    }
}
